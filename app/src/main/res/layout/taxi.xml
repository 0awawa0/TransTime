<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/tools"
    android:id="@+id/route_menu_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/titleRoutes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageButton
            android:paddingLeft="10dp"
            android:id="@+id/backArrow"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_arrow"
            android:background="#00000000"
            android:onClick="goBack"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            app:layout_constraintLeft_toRightOf="@id/backArrow"
            app:layout_constraintRight_toLeftOf="@+id/imgViewRoutes"
            app:layout_constraintTop_toTopOf="@+id/imgViewRoutes"
            app:layout_constraintBottom_toBottomOf="@id/imgViewRoutes"
            android:textAlignment="center"
            android:id="@+id/routesTitleText"
            android:textSize="26sp"
            android:textStyle="normal"
            android:textColor="@color/black" />
        <ImageView
            android:id="@+id/imgViewRoutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingRight="15dp" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/routesContentLayout"
        android:background="@color/colorButton">
        <ExpandableListView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/adViewRoutes"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/expandbleListTaxi"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </ExpandableListView>
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adViewRoutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_gravity="bottom|center_horizontal"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="#####################################">
        </com.google.android.gms.ads.AdView>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>